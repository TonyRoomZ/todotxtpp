body

  nav.navbar.navbar-default(role="navigation")
    .container-fluid
      .navbar-header
        button.navbar-toggle(type="button",data-toggle="collapse",data-target="#bs-example-navbar-collapse-1")
          span.sr-only Toggle nav
          span.icon-bar
        a.navbar-brand(href="#") Todo.txt++

      .collapse.navbar-collapse#bs-example-navbar-collapse-1
        ul.nav.navbar-nav
          li.active
            a(href="#") Link

        ul.nav.navbar-nav.navbar-right
          if username
            li.logged-in
              a.dropdown-toggle(href="#", data-toggle="dropdown")
                = username
                b.caret
              ul.dropdown-menu
                li
                  a(href="#" onclick="Dropbox.choose({success: onDBSuccess, linkType:'direct', extensions:['.txt', '.text']});") 
                    i.fa.fa-folder-open-o
                    |  Choose File
                li
                  a(href="/logout") 
                    i.fa.fa-sign-out
                    |  Logout
          else
            li.logged-out
              a(href="/login") Login
            